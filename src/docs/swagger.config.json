{
  "definition": {
    "openapi": "3.0.1",
    "info": {
      "title": "desafio-XP",
      "description": "API rest para desafio XP",
      "version": "1.0"
    },
    "servers": [
      {
        "url": "http://localhost:3001",
        "description": "servidor local"
      }
    ],
     "paths": {
      "/login": {
        "post": {
          "summary": "Rota destinada para autenticação do cliente",
          "description": "A rota retorna um JWT de autenticação",
          "tags": ["Login"],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Login"
                },
                "examples": {
                  "Login": {
                    "value": {
                      "email": "teste@teste.com",
                      "password": "123456"
                    }
                  }
                }
              }             
            }
          },
          "responses": {
            "202": {
              "description": "Autorizado",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "$ref": "#/components/schemas/loginResponse"
                  }
                }
              }
            },
            "401": {
              "description": "Não autorizado",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "$ref": "#/components/schemas/loginResponseFail"
                  }
                }
              }
            }
          }
        }
      },
      "/cliente/{codCliente}": {
        "get": {
          "description": "Busca transações de um cliente",
          "summary": "Busca transações de um cliente",
          "tags": ["Transações"],
          "parameters": [
            {
              "name": "codCliente",
              "in": "path",
              "description": "código do cliente para busca",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "Ok",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "$ref": "#/components/schemas/getTransaction"
                    
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Login": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        },
        "loginResponse":{
          "type": "object",
          "properties": {
            "token": {
              "type": "string"
            }
          }
        },
        "loginResponseFail":{
          "type": "object",
          "properties": {
            "errorMessage": {
              "type": "string"
            }
          }
        },
        "getTransaction":{
          "type": "array",
          "items": {
            "properties": {
              "codCliente": {
                "type": "integer"
              },
              "codAtivo": {
                "type": "integer"
              },
              "qntdeAtivo": {
                "type": "integer"
              },
              "preco": {
                "type": "number"
              }            
            }
          }
        }
      },
      "securitySchemes": {
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    }    
  },
  "apis":[]
}

